<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="s.marcelino@entando.com" id="1">
        <createTable tableName="digital_exchange">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="url" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="client_key" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="client_secret" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="public_key" type="varchar(128)">
                <constraints nullable="true"/>
            </column>
            <column name="timeout" type="int">
                <constraints nullable="true"/>
            </column>

            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="digital_exchange"/>
        </rollback>
    </changeSet>
</databaseChangeLog>